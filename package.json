{
	"name": "koa-ts",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"build": "tsc --build",
		"start": "ts-node-dev src/server.ts",
		"test": "NODE_ENV=test PORT=7788 jest",
		"test:watch": "npm run test -- --watchAll"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"koa": "^2.13.4",
		"koa-bodyparser": "^4.3.0",
		"koa-logger": "^3.2.1",
		"koa-router": "^10.1.1",
		"koa2-cors": "^2.0.6",
		"redis": "^4.1.0",
		"ts-node": "^10.8.1",
		"typescript": "^4.7.4"
	},
	"devDependencies": {
		"@types/jest": "^28.1.2",
		"@types/koa": "^2.13.4",
		"@types/koa-bodyparser": "^4.3.7",
		"@types/koa-logger": "^3.1.2",
		"@types/koa-router": "^7.4.4",
		"@types/koa2-cors": "^2.0.2",
		"@types/node": "^18.0.0",
		"@types/redis": "^4.0.11",
		"@types/supertest": "^2.0.12",
		"husky": "^8.0.1",
		"jest": "^28.1.1",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3",
		"supertest": "^6.2.3",
		"ts-jest": "^28.0.5",
		"ts-node-dev": "^2.0.0"
	},
	"jest": {
		"verbose": true,
		"collectCoverage": true,
		"modulePathIgnorePatterns": [
			"<rootDir>/node_modules/"
		],
		"roots": [
			"<rootDir>/__tests__"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec)\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
